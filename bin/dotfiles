#!/usr/bin/env bash

set -e

usage() {
  cat << HEREDOC
dotfiles

Usage:
  dotfiles help       show this screen
  dotfiles bootstrap  installs the dependencies required to use commands
  dotfiles setup      configure the system as it was a clean operating system,
                      creating core directories, installing drivers and our
                      desired packages, updating our core system packages and
                      applying our customized configuration
  dotfiles update     installs & updates our desired packages, our core system
                      packages, and applies any new or updated configuration that
                      may have changed since our last run

HEREDOC
}


log_message() {
  printf "%s" "$*"
}

dotfiles_run_script() {
  ctx="$1"
  cmd="$2"

  if [ -f "$HOME/scripts/$ctx/$cmd.sh" ]; then
    (cd "$HOME/scripts/$ctx" && "./$cmd.sh" -- "$@")
  fi
}

dotfiles_run() {
  kernel="$(uname -s | lowercase)"
  distro=""

  if [ "$kernel" = "linux" ]; then
    # normalize our distro to accomodate for higher level distros like EndeavourOS
    case "$(get-distro-id)" in
      arch|endeavouros) distro="arch" ;;
      *) echo "dotfiles: error - distro is not supported"; exit 1 ;;
    esac
  fi

  dotfiles_run_script "$kernel" "$cmd" "$kernel" "$distro"
  dotfiles_run_script "$distro" "$cmd" "$kernel" "$distro"
  dotfiles_run_script "agnostic" "$cmd" "$kernel" "$distro"
}

dotfiles_help() {
  usage
}

dotfiles() {
  cmd="$1"

  # probably bad practice, but this avoids any issues where something ends up
  # missing from the path
  # shellcheck source=../.bashrc
  . "$HOME/.bashrc"

  case "$cmd" in
    bootstrap|setup|update)
      start-sudo-loop "$DOTFILES_PASSWORD"
      dotfiles_run "$cmd"
      ;;
    *) dotfiles_help ;;
  esac
}

dotfiles "$@"
